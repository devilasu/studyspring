<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
 
<tiles-definitions>
 
 	<!-- noLeft 타일즈 -->
 	 <definition name="no.*.*" template="/WEB-INF/views/layout/layout-noLeft.jsp">
        <put-attribute name="header" value="/WEB-INF/views/{1}/include/header.jsp" />
        <put-attribute name="nav" value="/WEB-INF/views/{1}/include/nav.jsp" />
        <put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp" />
        <put-attribute name="footer" value="/WEB-INF/views/{1}/include/footer.jsp" />
    </definition>
    
    <!-- onLeft 타일즈 -->    
    <definition name="on.*.*" template="/WEB-INF/views/layout/layout-onLeft.jsp">
        <put-attribute name="header" value="/WEB-INF/views/{1}/include/header.jsp" />
        <put-attribute name="nav" value="/WEB-INF/views/{1}/include/nav.jsp" />
        <put-attribute name="left" value="/WEB-INF/views/{1}/include/left.jsp" />
        <put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp" />
        <put-attribute name="footer" value="/WEB-INF/views/{1}/include/footer.jsp" />
    </definition>
    
</tiles-definitions>