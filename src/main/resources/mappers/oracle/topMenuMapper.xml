<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="topMenuMapper">

<sql id="sqlWhere">
</sql>

<delete id="deleteTopMenu">
	delete from tbl_top_menu
	where
	menu_no = #{menu_no}
</delete>
<insert id="insertTopMenu">
	insert into tbl_top_menu values(
	#{menu_name},
	#{menu_no},
	#{menu_order}
	)
</insert>

<update id="updateTopMenu">
	update tbl_top_menu
	set
	menu_name=#{menu_name},
	menu_no = #{menu_no},
	menu_order = #{menu_order}
</update>

<select id="readTopMenu" resultType="com.home.vo.TopMenuVO">
	select * from tbl_top_menu
</select>

<select id="selectTopMenu" resultType="com.home.vo.TopMenuVO">
	select * from tbl_top_menu
	<include refid="sqlWhere" />
</select>

</mapper>